# DeepSeek From Scratch - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Modal Cloud GPU Configuration
# =============================================================================
# Get your tokens from: https://modal.com/settings
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=

# =============================================================================
# REQUIRED: Python Path Configuration
# =============================================================================
PYTHONPATH=src

# =============================================================================
# OPTIONAL: Weights & Biases Logging
# =============================================================================
# Get your API key from: https://wandb.ai/settings
WANDB_API_KEY=

# =============================================================================
# OPTIONAL: Hugging Face Hub Access
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
# Required for private models/datasets
HF_TOKEN=

# =============================================================================
# OPTIONAL: Ray Cluster Configuration
# =============================================================================
# Leave empty for local execution, set to "auto" for existing cluster
RAY_ADDRESS=

# =============================================================================
# OPTIONAL: NCCL Configuration for Multi-GPU Training
# =============================================================================
# Debug level: WARN, INFO, TRACE
NCCL_DEBUG=WARN
# Disable InfiniBand (set to 1 if not available)
NCCL_IB_DISABLE=0
# NCCL socket interface (e.g., eth0, eno1)
NCCL_SOCKET_IFNAME=
